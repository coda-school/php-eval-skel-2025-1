{% extends '_layouts/in_app.html.twig' %}

{% block title %}Ajouter un commentaire{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Ajouter un commentaire</h1>
    <p>En r√©ponse au tweet de <strong>@{{ tweet.createdBy.username }}</strong> :</p>
    <blockquote class="blockquote border-start ps-3">
        <p>{{ tweet.content }}</p>
    </blockquote>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
