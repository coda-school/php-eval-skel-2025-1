{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <header class="sidebar">
            <div class="logo">
                <img src="{{ asset('image.png') }}" alt="Logo" class="funny-logo">
            </div>

            <nav>
                <a href="{{ path('home') }}" class="active"><i class="fa-solid fa-house"></i> <span>Accueil</span></a>
                <a href="#"><i class="fa-solid fa-magnifying-glass"></i> <span>Explorer</span></a>
                <a href="#"><i class="fa-regular fa-bell"></i> <span>Notifications</span></a>
                <a href="{{ path('profile', {'id': app.user.id}) }}"><i class="fa-regular fa-envelope"></i> <span>Messages</span></a>

                {% if app.user %}
                    <a href="{{ path('profile', {'id': app.user.id}) }}">
                        <i class="fa-regular fa-user"></i> <span>Profil</span>
                    </a>
                {% endif %}
            </nav>

            <a href="{{ path('app_tweet_create') }}" class="tweet-btn">Poster</a>

            {% if app.user %}
                <a href="{{ path('profile', {'id': app.user.id}) }}" class="user-profile-link">
                    <div class="user-profile">
                        <img src="{{ app.user.avatar ? asset(app.user.avatar) : asset('pdp.jpg') }}" alt="Mon profil" class="avatar">

                        <div class="user-info">
                            <span class="name">{{ app.user.username }}</span>
                            <span class="handle">@{{ app.user.username|lower }}</span>
                        </div>
                        <i class="fa-solid fa-ellipsis" style="margin-left: auto;"></i>
                    </div>
                </a>
            {% endif %}
        </header>

        <main class="feed">
            {% block content %}{% endblock %}
        </main>

        <aside class="widgets">
            <div class="search-bar">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Recherche">
            </div>

            {% block suggestions %}
            {% if suggestions is defined and suggestions is not empty %}
            <div class="trends-container">
                <h3>Suggestions</h3>
                {% for suggestion in suggestions %}
                    <div class="trend-item" style="display: flex; align-items: center; justify-content: space-between; padding: 10px 0;">
                        <div style="display: flex; align-items: center;">
                            <img src="https://i.pravatar.cc/100?u={{ suggestion.id }}" alt="Avatar" class="avatar" style="width: 40px; height: 40px; border-radius: 50%; margin-right: 10px;">
                            <div style="display: flex; flex-direction: column;">
                                <a href="{{ path('profile', {'id': suggestion.id}) }}" style="text-decoration: none; color: inherit; font-weight: bold;">
                                    {{ suggestion.username }}
                                </a>
                                <span style="font-size: 0.8em; color: #657786;">@{{ suggestion.username|lower }}</span>
                            </div>
                        </div>
                        <a href="{{ path('profile', {'id': suggestion.id}) }}" class="post-btn-small" style="text-decoration: none; padding: 5px 15px; font-size: 0.9em;">Suivre</a>
                    </div>
                {% endfor %}
            </div>
            {% endif %}
            {% endblock %}

            <div class="trends-container">
                <h3>Tendances pour vous</h3>
                <div class="trend-item">
                    <span class="meta">Technologie • Tendances</span>
                    <p class="hashtag">CODA forme les futurs génies</p>
                    <span class="meta">12,5 k posts</span>
                </div>

                <div class="trend-item">
                    <span class="meta">Politique • Tendances</span>
                    <p class="hashtag">JN et Véréna élus président</p>
                    <span class="meta">54,9 k posts</span>
                </div>

                <div class="trend-item">
                    <span class="meta">Sciences • Tendances</span>
                    <p class="hashtag">Un projet fonctionne moins bien à 2 plutôt qu'à 4</p>
                    <span class="meta">454,9 k posts</span>
                </div>
            </div>
        </aside>
    </div>
{% endblock %}
